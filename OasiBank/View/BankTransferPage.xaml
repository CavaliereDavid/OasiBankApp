<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodel="clr-namespace:OasiBank.ViewModel"
             x:DataType="viewmodel:BankTransferPageViewModel"
             x:Class="OasiBank.View.BankTransferPage"
             Title="BankTransferPage">
    <VerticalStackLayout>
        <Label Text="IBAN"/>
        <Entry Text="{Binding Iban}"/>
        <Label Text="Amount"/>
        <Entry Text="{Binding Amount}"/>
        <Label Text="Bank transfer"/>
        <Button Text="Make transfer" Command="{Binding BankTransferCommand}" />
    </VerticalStackLayout>
</ContentPage>
    
    